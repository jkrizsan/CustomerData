

@model CompanyData.Services.IndexCompany

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Home/_Layout.cshtml";
}

<script>
    $(document).ready(function() {
    $('#CompanyTable').DataTable( {
        "pagingType": "Id"
    } );
} );
</script>

