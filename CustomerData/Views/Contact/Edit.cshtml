@using CompanyData.Data.Parameters;
@model CompanyData.Data.Models.Contact

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Home/_Layout.cshtml";
}

<h1>Edit Contact</h1>

<div>
    <a asp-action="@ActionNames.Create" asp-controller="@ControllerNames.Order" asp-route-contactId="@Model.Id">Create New Order</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleName" class="control-label"></label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.NumnerOfOrders):
                @Html.DisplayFor(model => model.NumnerOfOrders)
            </dt>
            <dt class="col-sm-10">
                @Html.DisplayNameFor(model => model.Income):
                @Html.DisplayFor(model => model.Income)
            </dt>
            <div class="form-group">
                <label asp-for="CompanyId" class="control-label"></label>
                <input asp-for="CompanyId" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div id="Order" style="width:1020px; margin: 0 auto;border:1px solid red;">
                <style>

                    table, th, td {
                        border-collapse: collapse;
                    }

                    th, td {
                        padding: 5px;
                        text-align: center;
                    }
                </style>

                <table id="ContactDataTable" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Orders[0].OrderDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Orders[0].OrderPrice)
                            </th>
                    </thead>
                    <tbody>

                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td class="Td"><a asp-controller="@ControllerNames.Order" asp-action="@ActionNames.Edit" asp-route-id="@order.Id">@order.OrderDate</a></td>
                                <td class="Td"><a asp-controller="@ControllerNames.Order" asp-action="@ActionNames.Edit" asp-route-id="@order.Id">@order.OrderPrice</a></td>

                                <td>
                                    <a asp-action="Delete" asp-controller="@ControllerNames.Order" asp-route-id="@order.Id">Delete</a>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="@ControllerNames.DataMap" asp-action="@ActionNames.Index">Back to List</a>
</div>

